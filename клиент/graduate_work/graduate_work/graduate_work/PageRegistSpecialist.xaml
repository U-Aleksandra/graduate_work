<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="graduate_work.PageRegistSpecialist">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Данные специалиста" FontSize="30" FontAttributes="Bold" FontFamily="Roboto" 
                   TextColor="#5147AC" HorizontalOptions="Center" Margin="0,0,0,10" ></Label>
            <Picker x:Name="pickerActivity" Title="Направление деятельности" WidthRequest="300"/>
            <Label x:Name="errorActivity" TextColor="Red" FontFamily="Roboto"></Label>
            <Entry x:Name="entryAdress" Placeholder="Адрес салона" WidthRequest="300"></Entry>
            <Label x:Name="errorAdress" TextColor="Red" FontFamily="Roboto"></Label>
            <Button x:Name="buttonAddSpecial" Text="Добавить" FontFamily="Roboto" FontSize="15"
                BackgroundColor="#5147AC" TextColor="White" FontAttributes="Bold"
                    Clicked="buttonAddSpecial_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>